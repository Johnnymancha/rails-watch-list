<div class="banner">
  <div class="container">
    <h1>List of movie type <strong>the best One!</strong></h1>
    <p>Change your life and start to watch my Film list</p>
    <a class="btn btn-flat" href="#">Apply now</a>
  </div>
</div>


<div class="container">
  <% @lists.each do |list| %>
    <%= link_to list_path(list) do %>
      <% if list.photo.attached?%>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_tag list.photo.key, height: 300, width: 400, crop: :fill %>)">
          <%= list.name %>
        </div>
      <% else %>
         <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/breakfast.jpg)">
          <%= list.name %>
        </div>
      <% end %>
    <% end %>
  <% end %>


<%= link_to 'Add a list', new_list_path %>


</div>
